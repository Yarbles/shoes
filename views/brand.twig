<html>
    <head>
    <title>Fly Kicks Database</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    </head>
        <body>
            <div class='container'>
                <h1>{{ brand.getBrandName }}</h1>

                {% if stores is not empty %}
                <p>Here are all the stores that carry this brand of shoe</p>
                <ul>
                    {% for store in stores %}
                    <li>{{ store.getStoreName }}</li>
                    {% endfor %}
                </ul>
                {% endif %}

                <h4>Add a store that carries this brand</h4>

                <form action='/add_stores' method='post'>
                    <input id='brand_id' name='brand_id' type='hidden' value='{{ brand.getId }}'>

                    <label for='store_id'>Select a store</label>
                    <select id='store_id' name='store_id' type='text'>
                        {% for store in all_stores %}
                        <option value='{{ store.getId }}'>{{ store.getStoreName }}</option>
                        {% endfor %}
                    </select>
                    <button type='submit'>Add Store</button>
                </form>
            </div>
        </body>
</html>
