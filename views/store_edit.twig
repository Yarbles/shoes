<html>
    <head>
        <title>Fly Kicks Database</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    </head>
        <body>
            <div class='container'>
                <h1>Update the name of a store: {{ store.getStoreName }}</h1>

                <form action='/stores/{{ store.getId }}' method='post'>
                    <input name='_method' type='hidden' value='patch'>

                    <label for='store_name'>Re-name this Store:</label>
                    <input id='store_name' name='store_name' type='text'>

                    <button type='submit'>Update</button>
                </form>

                <form action='/stores/{{ store.getId }}'method='post'>
                    <input name='_method' type='hidden' value='delete'>
                    <button type='submit'>Delete this store if it has closed</button>
                </form>
    <p><a href='/'>Home</a></p>
            </div>
        </body>
</html>
